{ pkgs ? import <nixpkgs> {} }:
with import <nixpkgs> {};
stdenv.mkDerivation rec {
  name = "my-secret-editor";
  src = ./src;
  buildInputs = [ makeWrapper ];
  installPhase = ''
    mkdir $out &&
      mkdir $out/bin &&
      makeWrapper $out/scripts/installer.sh $out/bin/installer --set PATH ${lib.makeBinPath [  ]} --set STORE_DIR $out &&
      true
  '';
}
